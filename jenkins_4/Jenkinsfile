pipeline {
    agent any
    
    parameters {
        choice(
            name: 'ENV',
            choices: ['dev', 'prod'],
            description: 'Выберите окружение для деплоя'
        )
    }

    stages {
        stage('Prepare') {
            steps {
                echo "Deploying to ${params.ENV} environment"
                cleanWs() // Очистка рабочей директории
            }
        }

        stage('Copy Files via SSH') {
            steps {
                sshPublisher(
                    publishers: [
                        sshPublisherDesc(
                            configName: 'server1', // Название конфигурации SSH
                            transfers: [
                                sshTransfer(
                                    sourceFiles: '**/*', // Копируем все файлы
                                    removePrefix: '', // Не обрезаем пути
                                    remoteDirectory: "/var/www/${params.ENV}", // Директория на сервере
                                    execCommand: """
                                        echo "Restarting service for ${params.ENV}"
                                        sudo systemctl restart ${params.ENV}-app.service
                                    """
                                )
                            ]
                        )
                    ]
                )
            }
        }
    }

    post {
        success {
            echo "Successfully deployed to ${params.ENV}"
        }
        failure {
            echo "Failed to deploy to ${params.ENV}"
        }
    }
}
